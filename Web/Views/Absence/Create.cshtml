@{
    ViewBag.Title = "title";
    Layout = "_EmployeeLayout";
}

@model Web.ViewModels.AbsenceViewModel


<div class="flex flex-col space-y-5">
    <span class="font-bold text-xl">
        Verlof aanvragen
    </span>
    <form asp-action="Create" id="absenceForm">
        <input asp-for="Status" type="hidden" class="form-control"/>
        <div class="form-control w-full">
            <div class="label">
                <span class="label-text">
                    <label asp-for="StartDate"></label>
                </span>
            </div>
            <input asp-for="StartDate" type="date" class="input w-full"/>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-control w-full">
            <div class="label">
                <span class="label-text">
                    <label asp-for="StartTime"></label>
                </span>
            </div>
            <input asp-for="StartTime" type="time" class="input w-full"/>
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>

        <div class="form-control w-full">
            <div class="label">
                <span class="label-text">
                    <label asp-for="EndDate"></label>
                </span>
            </div>
            <input asp-for="EndDate" type="date" class="input w-full"/>
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="form-control w-full">
            <div class="label">
                <span class="label-text">
                    <label asp-for="EndTime"></label>
                </span>
            </div>
            <input asp-for="EndTime" type="time" class="input w-full"/>
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>
        <div class="form-control w-full">
            <div class="label">
                <span class="label-text">
                    <label asp-for="Description"></label>
                </span>
            </div>
            <textarea asp-for="Description" class="input w-full"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-sm btn-primary mt-3 self-end">Opslaan</button>
        </div>
    </form>
</div>