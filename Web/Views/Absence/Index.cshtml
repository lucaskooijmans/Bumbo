@{
    ViewBag.Title = "title";
    Layout = "_EmployeeLayout";
}
@model Web.ViewModels.EmployeeOverviewViewModel

<div class="flex flex-col space-y-5">
    <div class="flex justify-between">
        <span class="font-bold text-xl">
            Verlof aanvragen
        </span>
        <a asp-controller="Absence" asp-action="Create" class="btn btn-sm btn-primary">
            Toevoegen
        </a>
    </div>
    <div class="flex flex-col space-y-3">
        @foreach (var absence in Model.Absences)
        {
            @Html.Partial("Partials/_Absence", absence, new ViewDataDictionary(Html.ViewData) { { "Evaluate", false } })
        }
    </div>
</div>