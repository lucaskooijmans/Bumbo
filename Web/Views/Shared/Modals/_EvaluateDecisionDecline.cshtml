@model Web.ViewModels.AbsenceViewModel

<dialog id="showDecline@(Model.Id)" class="modal">
    <div class="modal-box">
        <form method="dialog">
            <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">
                <i class="fa-solid fa-x"></i>
            </button>
        </form>
        <h2 class="font-bold text-lg">Weet je zeker dat je het verlofverzoek wilt afkeuren?</h2>
        <div class="modal-action">
            <form asp-controller="Absence" asp-action="Evaluate" asp-route-id="@Model.Id" asp-route-status="Declined">
                <button type="submit" class="btn btn-error"><i class="fa-solid fa-x"></i>Afkeuren</button>
            </form>
        </div>
    </div>
</dialog>