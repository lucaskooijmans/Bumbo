@model Web.ViewModels.ShiftViewModel

<dialog id="showChangeRequestCreate@(Model.Id)" class="modal">
    <div class="modal-box">
        <form method="dialog">
            <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">
                <i class="fa-solid fa-x"></i>
            </button>
        </form>
        <h2 class="font-bold text-lg">Weet je zeker dat je vervanging wilt zoeken voor de volgende dienst?</h2>
        <span>
            @Model.Start.DateName() | @Model.Start.Time() - @Model.End.Time()
        </span>
        <div class="modal-action">
            <form asp-controller="EmployeeShift" asp-action="CreateReplacementRequest" asp-route-id="@Model.Id">
                <button type="submit" class="btn btn-success"><i class="fa-solid fa-check"></i>Ja</button>
            </form>
            <form method="dialog">
                <button class="btn">Sluiten</button>
            </form>
        </div>
    </div>
</dialog>